<h1><%= t('.unsere_1', city_title: @city.title) %></h1>

<div class="row">
<div class="col-md-3">
	
	<% if (!@city.participants.include?(current_user)) %>
	<p><%= link_to (t '.participate'), participate_city_path(@city), :class=> 'btn btn-default'%></p>
	<% end %>
	
	<h3><%= t '.kategorien_1' %></h3>
	<%= link_to (t '.alle_1'), city_path(@city) %>
	
	<%= render :partial => 'categories', :locals => {:categories => @categories} %>
	<% if (@city.participants.include?(current_user)) %>
	
	<h4><%= t '.verantwortliche' %></h4>
	<ul class="list-group">
		<% @city.users.each do |user| %>
			
			<% if user_signed_in? %>
				<a class="list-group-item clearfix" href="<%=user_url(user) %>">
					<%= raw(t'.responsible_user', :image_tag_user => (image_tag user.avatar.url(:thumb), :class => "pull-left"), :user_name => (user.name)) %>
				</a>
			<% else %>
				<li class="list-group-item">
					<%= user.name %>
				</li>
			<% end %>
		<% end %>
	</ul>
	<% end %>
	
	<% if user_signed_in? %>
	  <% if current_user.try(:admin?) || @city.users.include?(current_user) %>
<!--<h4><%= t '.nutzer' %></h4>
<p><%=link_to request.base_url+invite_city_path(@city), invite_city_path(@city)%></p>
<p><%= t '.sende_diesen', :city_title => (@city.title) %></p>	
-->
<% end %><% end %>
</div>
<div class="col-md-9">
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t '.title_2' %></th>
      <th><%= t '.category_1' %></th>
	<% if user_signed_in? %>
	  <% if current_user.try(:admin?) %>
      <th colspan="2"></th>
<% end %><% end %>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr <% if project.urgent == true %> class="danger"<% end %>>
        <td><%= link_to project.title, project %></td>
        <td><%= link_to project.category.title, project %></td>
		<% if user_signed_in? %>
		  <% if current_user.try(:admin?) %>
        <td><%= link_to (t '.edit_4'), edit_project_path(project) %></td>
        <td><%= link_to (t '.destroy_3'), project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %><% end %>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
	<% if user_signed_in? %>
	  <% if current_user.try(:admin?) || @city.users.include?(@current_user) %>
<%= link_to (t '.new_project_1'), new_project_path(city_id: @city.id)  %>
<% end %><% end %>

</div>
</div>


<% if user_signed_in? %>
  <% if current_user.try(:admin?) %>
<%= link_to (t '.edit_5'), edit_city_path(@city) %> |
<% end %><% end %>
