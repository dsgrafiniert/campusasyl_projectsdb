<p id="notice"><%= notice %></p>

<h1><%= t '.listing_events' %></h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
      <tr>
        <td><%= link_to (t '.show_4'), event %></td>
        <td><%= link_to (t '.edit_6'), edit_event_path(event) %></td>
        <td><%= link_to (t '.destroy_4'), event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

