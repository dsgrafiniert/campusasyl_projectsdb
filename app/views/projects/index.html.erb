<p id="notice"><%= notice %></p>

<div class="row">
<div class="col-md-3">
	<ul class="list-group">
		<% @categories.each do |cat| %>
	  <li class="list-group-item"><%= cat.title %></li>
	<% end %>
	</ul>
</div>
<div class="col-md-9">
<h1><%= t '.listing_1' %></h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th><%= t '.title_4' %></th>
      <th><%= t '.description' %></th>
      <th><%= t '.city' %></th>
      <th><%= t '.category_3' %></th>
      <th><%= t '.time' %></th>
      <th><%= t '.urgent_1' %></th>
      <th><%= t '.required' %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= project.title %></td>
        <td><%= project.description %></td>
        <td><%= project.city %></td>
        <td><%= project.category %></td>
        <td><%= project.time %></td>
        <td><%= project.urgent %></td>
        <td><%= project.required_people %></td>
        <td><%= link_to (t '.show_6'), project %></td>
        <td><%= link_to (t '.edit_8'), edit_project_path(project) %></td>
        <td><%= link_to (t '.destroy_5'), project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to (t '.new_project_2'), new_project_path %>
</div>
</div>