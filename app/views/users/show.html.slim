.well
  .row
    .col-md-3
      = image_tag @user.avatar if @user.avatar
    .col-md-9
      - if @user.name
        h3
          = @user.name if @user.name
      - if @user.email
        p
          = t '.email', :link_to_e_mail => (link_to (t '.e_mail_senden'), "mailto://"+@user.email)
      - if (@user.telephone && @user.may_see_telephone?(current_user))
        p
          = t '.telefon', :user_telephone => (@user.telephone)
      - if @user.provider == "facebook"
        p
          = link_to (t '.zum_facebook'), "http://facebook.com/"+@user.uid
      - @user.skills.any?
      - @user.skills.each do |tag|
        span.label.label-default
          = tag.name
